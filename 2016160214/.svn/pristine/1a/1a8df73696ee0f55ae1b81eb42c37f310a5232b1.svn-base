<?php

function novavideo_lite_widgets_init() {
    register_sidebar(array(
        'name'          => 'Sidebar',
        'id'            => 'sidebar',
        'before_widget' => '<div class="sidebar-widget">',
        'after_widget'  => '</div>',
        'before_title'  => '<div class="widget-title"><span>',
        'after_title'   => '</span></div>'
    ));
}
    
add_action( 'widgets_init', 'novavideo_lite_widgets_init' );